<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <TextView android:text="@string/my_nanodegree_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@style/Title"
        android:id="@+id/title" />

    <Button
        android:text="@string/spotify_streamer"
        android:id="@+id/button1"
        android:layout_below="@+id/title"
        style="@style/Button"/>

    <Button
        android:text="@string/scores_app"
        android:id="@+id/button2"
        android:layout_below="@+id/button1"
        style="@style/Button"/>

    <Button
        android:text="@string/library_app"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        style="@style/Button"/>

    <Button
        android:text="@string/build_it_bigger"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        style="@style/Button"/>

    <Button
        android:text="@string/xyz_reader"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        style="@style/Button"/>

    <Button
        android:text="@string/capstone_my_own_app"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        style="@style/Button.Red"/>

</RelativeLayout>

</ScrollView>
